<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/team_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#EAECFC"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/team_inst"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="팀 순위"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TableLayout
            android:id="@+id/team_table_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#EAECFC" >

            <TableRow>

                <TextView
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="순위"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <TextView
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="구단"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <TextView
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="경기"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <TextView
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="승"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <TextView
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="패"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <TextView
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="무"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <TextView
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="승률"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <TextView
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="승차"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <TextView
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="연속"
                    android:textColor="#000000"
                    android:textSize="12dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView><!--
