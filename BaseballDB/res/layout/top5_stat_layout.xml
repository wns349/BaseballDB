<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top5_stat_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EAECFC"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/top5_stat_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/top5_stat_detail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" 
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/top5_image"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:padding="1dp" />

            <LinearLayout
                android:id="@+id/top5_player_list_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/top5_stat_list"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>

    </LinearLayout>

</LinearLayout>